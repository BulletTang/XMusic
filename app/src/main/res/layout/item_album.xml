<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/iv_recommend_album"
        android:scaleType="centerCrop"
        android:layout_width="100dp"
        android:layout_height="100dp" />
    <TextView

        android:layout_below="@id/iv_recommend_album"
        android:id="@+id/tv_recommend_title"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <LinearLayout android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:background="#40000000"
        android:layout_alignBottom="@id/iv_recommend_album"
        android:orientation="horizontal">
        <ImageView
            android:scaleType="centerCrop"
            android:src="@drawable/ic_singer"
            android:layout_width="18dp"
            android:layout_height="18dp" />

        <TextView
            android:gravity="center_vertical"
            android:textColor="@color/white"
            android:maxLines="1"
            android:ellipsize="end"
            android:id="@+id/tv_recommend_ablum_author"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    </LinearLayout>

</RelativeLayout>